<main class="row col-10 mx-auto m-0 justify-content-center align-items-center">
    

    <form class="col-lg-4 p-5 login-box" method="post" action="/admin">
        <img 
            class="d-block mx-auto mb-3" 
            src="/img/logo2.svg" 
            alt=""
            style="transform: scale(.8);"
        >
        <div class="form-box">
            <input 
                id=""
                type="text" 
                name="adminID" 
                placeholder="Admin ID"
                required
            >
        </div>
        <div class="form-box">
            <input 
                id=""
                type="text" 
                name="password" 
                placeholder="Password"
                required
            >
        </div>
        <div class="form-box col-lg-6">
            <button type="submit">Login</button>
        </div>
    </form>


    <h1 class="text-white col-lg-8 ps-5">
        Protect yourself from non-genuine medications...
    </h1>


</main>